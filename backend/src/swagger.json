              }
            },
            {
              "name": "offset",
              "in": "query",
              "schema": {
                "type": "integer",
                "example": 0
              }
            },
            {
              "name": "role",
              "in": "query",
              "schema": {
                "type": "string",
                "enum": ["USER", "PROFESSIONAL", "MODERATOR", "ADMIN"]
              }
            },
            {
              "name": "search",
              "in": "query",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
