          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["bookingId", "rating", "comment"],
                  "properties": {
                    "bookingId": {
                      "type": "string",
                      "example": "clxxx123456"
                    },
                    "rating": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 5,
                      "example": 5
                    },
                    "comment": {
                      "type": "string",
                      "minLength": 10,
                      "maxLength": 1000,
                      "example": "Amazing experience! Highly recommended."
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Review created"
            },
            "400": {
              "description": "Bad request"
            },
            "404": {
              "description": "Booking not found or not eligible"
            }
          }
        }
