                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Role updated"
            }
          }
        }
      },
      "/bookings": {
        "post": {
          "tags": ["Bookings"],
          "summary": "Create a new booking",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "boatId",
                    "startDate",
                    "endDate",
                    "pax",
                    "roomsBooked",
                    "placesVisited"
                  ],
                  "properties": {
                    "boatId": {
                      "type": "string",
                      "example": "clxxx123456"
                    },
                    "startDate": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-12-25T00:00:00Z"
                    },
                    "endDate": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-12-27T00:00:00Z"
                    },
                    "pax": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 30,
                      "example": 4
                    },
                    "roomsBooked": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "object",
                        "required": ["type", "quantity"],
                        "properties": {
                          "type": {
                            "type": "string",
                            "example": "AC"
                          },
                          "quantity": {
                            "type": "integer",
                            "minimum": 1,
                            "example": 2
                          }
                        }
                      }
                    },
                    "placesVisited": {
                      "type": "array",
                      "minItems": 5,
                      "maxItems": 5,
                      "items": {
                        "type": "string"
                      },
                      "example": [
                        "Tanguar Haor",
                        "Ratargul",
                        "Jaflong",
                        "Srimangal",
                        "Sylhet"
                      ]
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Booking created"
            },
            "400": {
              "description": "Bad request"
            },
            "409": {
              "description": "Booking conflict - rooms not available"
            }
          }
        }
      },
      "/bookings/my": {
        "get": {
          "tags": ["Bookings"],
          "summary": "Get current user's bookings",
          "security": [
            {
              "bearerAuth": []
            }
