            },
            {
              "name": "offset",
              "in": "query",
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "status",
              "in": "query",
              "schema": {
                "type": "string",
                "enum": [
                  "PENDING",
                  "CONFIRMED",
                  "PAID",
                  "CANCELLED",
                  "REFUNDED"
                ]
              }
            },
            {
              "name": "userId",
              "in": "query",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "List of bookings"
            }
          }
        }
      },
      "/bookings/admin/{id}/status": {
        "patch": {
          "tags": ["Bookings", "Admin"],
          "summary": "Update booking status (Admin/Moderator only)",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["status"],
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "PENDING",
                        "CONFIRMED",
                        "PAID",
                        "CANCELLED",
                        "REFUNDED"
                      ],
                      "example": "CONFIRMED"
                    },
                    "message": {
                      "type": "string",
                      "example": "Booking confirmed successfully"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Status updated"
            }
          }
        }
      },
      "/reviews": {
        "post": {
          "tags": ["Reviews"],
          "summary": "Create a review",
          "security": [
