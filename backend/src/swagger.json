          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "userId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["role"],
                  "properties": {
                    "role": {
                      "type": "string",
                      "enum": ["USER", "PROFESSIONAL", "MODERATOR", "ADMIN"],
                      "example": "MODERATOR"
